{{ansible_managed|comment}}
# general
OAUTH2_PROXY_HTTP_ADDRESS=http://0.0.0.0:4180
OAUTH2_PROXY_SKIP_PROVIDER_BUTTON=true

# cookie
OAUTH2_PROXY_COOKIE_DOMAINS={{ rps_groups_interface_service_name }}

# provider (keycloak-oidc is the only option for now)
OAUTH2_PROXY_PROVIDER=keycloak-oidc

# keycloak
OAUTH2_PROXY_SCOPE=openid email profile roles

# authorization
OAUTH2_PROXY_EMAIL_DOMAINS=*
OAUTH2_PROXY_PASS_ACCESS_TOKEN=true

# logging
OAUTH2_PROXY_REQUEST_LOGGING={{rps_groups_interface_oauth2_proxy_request_logging|bool|lower}}

# allow redirect to all our domains
OAUTH2_PROXY_WHITELIST_DOMAINS={{ rps_groups_interface_service_name }}