{{ ansible_managed | comment }}

DEBUG="true"

KEYCLOAK_URL=https://{{keycloak_service_name}}
KEYCLOAK_REALM={{ matrix_sync_keycloak_client_realm }}
KEYCLOAK_CLIENT_ID={{ matrix_sync_keycloak_client_client_id }}
KEYCLOAK_SECRET={{ matrix_sync_keycloak_client_secret }}
KEYCLOAK_REQUIRED_ACTIONS={{ keycloak_required_user_actions | to_json }}
KEYCLOAK_DECISION_STRATEGY=AFFIRMATIVE
KEYCLOAK_POLICY_ENFORCEMENT_MODE=ENFORCING
KEYCLOAK_AUTHZ_CLIENT=realm-management

MATRIX_USERNAME="@{{ matrix_sync_user }}:{{ matrix_domain }}"
MATRIX_ACCESS_TOKEN="{{ matrix_sync_access_token }}"
MATRIX_HOMESERVER="https://{{ matrix_homeserver_name }}"
MATRIX_HOMESERVER_TAG="{{ matrix_domain }}"
MATRIX_AUTO_INVITE="{{ matrix_with_auto_invite | default('false') }}"

SYNC_IGNORE_GROUPS={{ matrix_sync_ignore_groups | to_json }}
SYNC_IGNORE_USERS={{ matrix_sync_ignore_users | to_json }}

ALERTA_HOSTNAME="{{ matrix_sync_alerta_hostname }}/api/alert"
ALERTA_API_KEY="{{  matrix_sync_alerta_api_key  }}"